<div class="container">



<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Login
    </h1>

    <!-- LOGIN FORM -->
    <form action="/auth/login" method="post">
        <div class="form-group">
            <label>Username</label>
            <input type="text"
                class="form-control"
                name="username"
                placeholder="JohnDoe@gmail.com, I_AM_Batman, L33T_H4X0R, Eddie, etc."
                required autofocus>
        </div>
        <div class="form-group">
            <label>Password(Password policy:  It's your funeral.)</label>
            <input type="password"
                class="form-control"
                name="password"
                placeholder="********">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
        <% if (message) { %>
            <span class="alert alert-danger" role="alert" style="font-size: 16px; float:right"><%=message%></span>
        <% } %>
    </form>

    <hr>

    <p>Need an account? <a href="/auth/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>