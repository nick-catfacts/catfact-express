<div class="row">

  <div class="col-md-3">
    <button type="#"
    data-toggle="modal"
    data-target="#myModal"
    data-amount-cents="100"
    data-messages="50"
    class="btn btn-success">Add $1 (50 messages)</button>

  </div>

  <div class="col-md-3">
      <button type="#"
      data-toggle="modal"
      data-target="#myModal"
      data-amount-cents="500"
      data-messages="250"
      class="btn btn-success">Add $5 (250 messages)</button>
  </div>

  <div class="col-md-3">
      <button type="#"
      data-toggle="modal"
      data-target="#myModal"
      data-amount-cents="1000"
      data-messages="500"
      class="btn btn-success">Add $10 (500 messages)</button>
  </div>

</div>



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Confirm Charges</h4>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
         <form action="/dashboard/account/add" method="post" class="form-inline" id="modal-form">
            <input type="hidden" id="charge-input" name="charge_amt" value=""/>
            <button type="submit" class="btn btn-warning buy_messages">Confirm</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
        </form>
      </div>
    </div>
  </div>
</div>

