<div class ="container-fluid">

  <%# Username Pane %>
  <div class = "row">
    <div class="col-md-12">
      <h4 style="margin-top:0px; text-decoration: underline;"> Hello,  <%= username %>. </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
        <%# Messages remaining pane %>
        <div class = "row">
          <div class="col-md-12">
            <h4 style="margin-top:0px; text-decoration: underline;">
              You have <%= messages_remaining %> cat facts remaining. %>
            </h4>
          </div>
        </div>

        <%# Increase Messages Pane %>
        <div class="row">
          <div class="col-md-12">
            <% include ./_increase_msg_buttons %>
          </div>
        </div>
    </div>

    <%# Payment info Pane %>
    <div class="col-md-3">
        <% include ./_output_payment_info %>
    </div>
  </div>

  <%# Recipients Pane %>
  <div class ="row">
    <div class="col-md-12">
      <h4 style="text-decoration:underline;">Your Cat Facts recipients </h4>
      <% include ./_output_recipients %>
    </div>
  </div>


</div>
